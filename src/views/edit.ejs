<%- include("partials/header.ejs") %>
<nav class ="navbar navbar-dark bg-dark mb-4">
    <a href="/" class ="navbar-brand">Trabajo Parcial de Discreta</a>
</nav>   
<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<%= task._id%>" method ="POST">
                        <div class="form-group">
                            <input type="text" name = "proyecto" placeholder="Insert a title" class ="form-control" value ="<%= task.proyecto %>">
                        </div>
                        <div class="form-group">
                            <textarea name="criterio" cols="80" class ="form-control" placeholder="Insert an description"> <%= task.criterio %></textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" name = "porcentajeCriterio" placeholder="Ingrese porcentaje" class ="form-control" value ="<%= task.porcentajeCriterio%>">
                        </div>
                        <button type ="submit" class ="btn btn-primary btn-block">Update</button>
                    </form>
                </div> <!-- Fin de card-body -->
            </div> <!-- Fin de card -->
        </div> <!-- Fin de col-md-5 -->
    </div>
</div>

<%- include("partials/footer.ejs") %>